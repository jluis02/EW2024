extends layout

block content
  style.
    .login-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 20px; /* Espa√ßo entre os elementos */
    }
    .login-title {
      background-color: #1fd761; /* Cor de fundo da caixa */
      width: 350px;
      color: white;
      padding: 10px 20px;
      border-radius: 5px;
      margin-bottom: 20px;
    }
    .login-container .form-group {
      width: 300px;
    }
    .login-container .form-group label {
      color: white;
    }
    .btn-container {
      display: flex;
      justify-content: space-between;
      width: 100%;
      max-width: 320px;
    }
    .btn-login {
      background-color: #1fd761;
      border-color: #1fd761;
      border-radius: 3%;
      color: white;
      margin-top: 20px;
      border-width: 2px;
      flex: 1;
      margin-right: 10px;
    }
    .btn-back {
      background-color: #6c757d;
      border-color: #6c757d;
      border-radius: 3%;
      color: white;
      margin-top: 20px;
      border-width: 2px;
      flex: 1;
      margin-left: 10px;
    }
    .modal {
      display: none; /* Hidden by default */
      position: fixed; /* Stay in place */
      z-index: 1; /* Sit on top */
      left: 0;
      top: 0;
      width: 100%; /* Full width */
      height: 100%; /* Full height */
      overflow: auto; /* Enable scroll if needed */
      background-color: rgba(0, 0, 0, 0.4); /* Black w/ opacity */
      padding-top: 60px;
    }
    .modal-content {
      background-color: #fefefe;
      margin: 15% auto; /* 15% from the top and centered */
      padding: 20px;
      border: 1px solid #888;
      width: 40%; /* Reduced width */
      max-width: 300px; /* Maximum width */
      box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
      border-radius: 10px;
    }
    .modal-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      border-bottom: 1px solid #888;
      padding-bottom: 10px;
    }
    .modal-title {
      font-size: 20px;
      font-weight: bold;
    }
    .modal-body {
      padding-top: 10px;
    }
    .close {
      color: #aaa;
      font-size: 28px;
      font-weight: bold;
      cursor: pointer;
    }
    .close:hover,
    .close:focus {
      color: black;
      text-decoration: none;
    }
  .login-container
    .login-title
      h1 Login
    if success_msg
      .alert.alert-success #{success_msg}
    form(action='/auth/login', method='post')
      .form-group
        label(for='email') Email
        input#email.form-control(name='email', type='text')
      .form-group
        label(for='password') Password
        input#password.form-control(name='password', type='password')
      .btn-container
        button.btn.btn-login(type='submit') Login
        a.btn.btn-back(href='/auth') Return

  // Modal structure
  .modal(id="errorModal")
    .modal-content
      .modal-header
        .modal-title Error
        span.close(onclick="document.getElementById('errorModal').style.display='none'") &times;
      .modal-body
        p#errorMessage

  script.
    const urlParams = new URLSearchParams(window.location.search);
    const errorMsg = urlParams.get('error_msg');
    const successMsg = urlParams.get('success_msg');
    if (errorMsg) {
      const modal = document.getElementById('errorModal');
      const errorMessage = document.getElementById('errorMessage');
      errorMessage.textContent = errorMsg;
      modal.style.display = 'block';
    }
    if (successMsg) {
      alert(successMsg);
    }
    // Close the modal if the user clicks anywhere outside of it
    window.onclick = function(event) {
      const modal = document.getElementById('errorModal');
      if (event.target == modal) {
        modal.style.display = "none";
      }
    }
