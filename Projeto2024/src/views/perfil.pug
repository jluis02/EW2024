extends layout-main

block content
  .profile-container
    .profile-content
      .left-panel
        .header-card
          .header-content
            h2 #{user.firstName} #{user.lastName}
            .xp-bar-container
              .level-left #{user.level}
              .xp-bar-wrapper
                .xp-bar(style=`width: ${(user.xp % 100)}%;`)
              .level-right #{user.level + 1}
              .xp-percentage #{(user.xp % 100)}%
        hr
        .detail-wrapper
          .detail-card
            span Média de avaliações de Recursos Disponibilizados
             p= averageRating.toFixed(1)
          .detail-card
            span Recursos Disponibilizados
            p= resourceCount
        .detail-wrapper
          .detail-card
            span Posts Feitos
            p= postCount
          .detail-card
            span Especialista em
            p= mostFrequentTypes.join(', ')
        hr
        if highestRatedResource
          a.bigger-container(href=`/resource/${highestRatedResource._id}`)
            h4 Recurso mais avaliado:
            h5= highestRatedResource.title
        else
          .bigger-container
            h4 Recurso mais avaliado:
            h5 Nenhum recurso avaliado encontrado
      .account-details
        .account-card
            h3 Account Details
        hr
        .detail-wrapper
          .detail-card-clickable
            span First Name
            p= user.firstName
          .detail-card-clickable
            span Last Name
            p= user.lastName
        .detail-wrapper
          .detail-card
            span Filiação
            p Curso: #{user.course}, Departamento: #{user.department}
          .detail-card
            span Nível
            if user.admin
              p Admin
            else
              p Utilizador
        .detail-wrapper
          .detail-card
            span Data de Registo
            p= new Date(user.registrationDate).toLocaleDateString()
          .detail-card
            span Data do Último Acesso
            p= new Date(user.lastAccessDate).toLocaleDateString()
        .detail-wrapper
          .detail-card-clickable
            span Email
            p= user.email
          .detail-card-clickable
            span Role
            p= user.role
    style.
      .profile-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 20px;
        background-color: #212020;
        color: #fff;
      }
      .profile-content {
        display: flex;
        width: 100%;
        justify-content: space-between;
      }
      .header-card {
        width: 100%;
        background-color: #444;
        border-radius: 5px;
        margin-bottom: 2.5%;
        margin-top: 2.5%;
        padding: 2%;
        cursor: default;
        display: flex;
        align-items: center;
      }
      .account-card {
        width: 100%;
        background-color: #444;
        border-radius: 5px;
        margin-bottom: 2.5%;
        margin-top: 2.5%;
        padding: 2%;
        cursor: default;
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .header-content {
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 100%;
      }
      .xp-bar-container {
        display: flex;
        align-items: center;
        margin-left: 20px;
        position: relative;
        width: 100%;
      }
      .xp-bar-wrapper {
        background-color: #555;
        border-radius: 5px;
        overflow: hidden;
        flex-grow: 1;
        height: 20px;
        margin: 0 10px;
        position: relative;
      }
      .xp-bar {
        background-color: #1fd761;
        height: 100%;
        position: absolute;
        left: 0;
        top: 0;
      }
      .level-left, .level-right, .xp-percentage {
        font-weight: bold;
        margin-left: 5px;
        margin-right: 5px;
      }
      .left-panel {
        display: flex;
        flex-direction: column;
        width: 75%;
        background-color: #333;
        border-radius: 5px;
        padding: 25px;
        margin-right: 2.5%;
        margin-left: -15%;
        margin-top: 2.5%;
      }
      .account-details {
        display: flex;
        flex-direction: column;
        width: 75%;
        background-color: #333;
        border-radius: 5px;
        padding: 25px;
        margin-left: 2.5%;
        margin-right: -15%;
        margin-top: 2.5%;
      }
      .detail-wrapper {
        display: flex;
        justify-content: space-between;
        margin-top: 2.5%;
      }
      .detail-card {
        background-color: #444;
        border-radius: 5px;
        padding: 20px;
        margin-bottom: 10px;
        width: 48%;
        cursor: default;
      }
      .detail-card-clickable {
        background-color: #444;
        border-radius: 5px;
        padding: 20px;
        margin-bottom: 10px;
        width: 48%;
        cursor: pointer;
      }
      .detail-card-clickable:hover {
        color: #1fd761;
      }
      .bigger-container {
        display: block;
        width: 100%;
        background-color: #444;
        border-radius: 5px;
        margin-bottom: 2.5%;
        margin-top: 2.5%;
        padding: 5%;
        cursor: pointer;
        text-decoration: none;
        color: inherit;
      }
      .bigger-container:hover {
        color: #1fd761; /* Altera a cor do texto para verde */
        text-decoration: none; /* Garante que o texto não fique sublinhado */
      }
      hr {
        border: 1px solid #444;
        width: 100%;
      }
      span {
        display: block;
        font-weight: bold;
      }
